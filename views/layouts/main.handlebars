<!doctype html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="maximum-scale=.5" />
    
	<link rel="shortlink" href="http://earlsurls.site/" />
    <link rel="stylesheet" href="/css/app.css"/>

	<title>EARLS URLS</title>
</head>
<body>
	<div class="site-wrapper">
		<div class="site-wrapper-inner">
			<div class="cover-container">
				<div class="masthead clearfix">
					<div class="inner">
						<h1 class="site"><a href="/">Earls Urls</a></h1>
					</div>
				</div>

				<div class="inner cover">
					{{#if user}}
						<pre>user: {{ json user }}</pre>
						<a href="/logout">logout</a>
					{{else}}
						<form class="" method="post" action="/login">
							<input type="text" class="form-control"  id="url" name="username" tabindex="1" placeholder="user"/>
							<input type="password" class="form-control"  id="url" name="password" tabindex="2" placeholder="pass"/>

							<input type="submit"  class="btn btn-lg btn-primary btn-block" tabindex="3" value="login" />
						</form>
						{{/if}}

					{{{body}}}
				</div>

				<div class="mastfoot">
					<div class="inner">
						<p>
							<a href="https://github.com/pinecone-dot-website/earls-urls">github</a> |
							<a href="http://rack.and.pinecone.website">rack &amp; pinecone</a>
						</p>
					</div>
				</div>
			</div>
		</div>
    </div>
</body>
</html>